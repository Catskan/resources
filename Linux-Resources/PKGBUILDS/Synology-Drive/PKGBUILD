# Maintainer: Aur√©lien P

pkgname=SynologyDrive
pkgver=1.14
pkgrel=1
pkgdesc="Synology Drive Client Desktop"
pkgdir=
arch=('i686' 'x86_64')
url="https://www.synology.com/fr-fr/dsm/feature/drive"
license=('EULA')
depends=()
#install='craftware.install'
source=('https://global.download.synology.com/download/Utility/SynologyDriveClient/3.2.0-13238/Ubuntu/Installer/x86_64/synology-drive-client-13238.x86_64.deb')
md5sums=('a82d4ad840611ae2425321c39044e500')
srcdir=./
pkgdir=${srcdir}
prepare() {
    ar -xv synology-drive-client-13238.x86_64.deb
	tar -xf data.tar.xz
}
package() {
    install -d -m755 ${pkgdir}/opt/Synology/${pkgname}
    install -d -m755 ${pkgdir}/usr/bin
    install -d -m755 ${pkgdir}usr/lib
    install -d -m755 ${pkgdir}usr/share
    ln -s /opt/Synology/${pkgname}/bin/launcher ${pkgdir}/usr/bin
}